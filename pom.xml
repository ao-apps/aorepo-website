	<groupId>org.aorepo</groupId><artifactId>website</artifactId><version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<properties>
		<javadoc.breadcrumbs><![CDATA[<a target="_top" href="https://aorepo.org/">AORepo</a>]]></javadoc.breadcrumbs>
		<shortTitle />
		<google.analytics.trackingId>UA-86871646-3</google.analytics.trackingId>
		<!-- Parallel deployment -->
		<!-- Unreliable with current hack: <maven.build.timestamp.format>yyyyMMdd.HHmmss</maven.build.timestamp.format> -->
	</properties>

	<name>AORepo Website</name>
	<url>https://aorepo.org/</url>
	<description>The aorepo.org website.</description>
	<inceptionYear>2017</inceptionYear>

	<scm>
		<connection>scm:git:git://github.com/aoindustries/aorepo-website.git</connection>
		<developerConnection>scm:git:git@github.com:aoindustries/aorepo-website.git</developerConnection>
		<url>https://github.com/aoindustries/aorepo-website</url>
		<tag>HEAD</tag>
	</scm>

	<profiles>
		<!-- Features only enabled during development time -->
		<profile>
			<id>development</id>
			<dependencyManagement>
				<dependencies>
					<dependency>
						<groupId>com.semanticcms</groupId><artifactId>semanticcms-openfile-bom</artifactId><version>1.3.1-SNAPSHOT</version>
						<type>pom</type>
						<scope>import</scope>
					</dependency>
					<dependency>
						<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-all</artifactId><version>1.4.4-SNAPSHOT</version>
					</dependency>
					<dependency>
						<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-tree</artifactId><version>1.4.4-SNAPSHOT</version>
					</dependency>
					<dependency>
						<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-what-links-here</artifactId><version>1.4.4-SNAPSHOT</version>
					</dependency>
				</dependencies>
			</dependencyManagement>
			<dependencies>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-openfile-all</artifactId>
					<type>pom</type>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-all</artifactId>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-tree</artifactId>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-what-links-here</artifactId>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>release</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
							<configuration>
								<charset>UTF-8</charset>
								<server>aorepo.org</server>
								<!-- Parallel deployment -->
								<!-- Unreliable with current hack:
								<path>/ROOT##${maven.build.timestamp}-${project.version}</path>
								-->
								<path>/</path>
								<update>true</update>
								<url>https://aorepo.org/i8v5280YfMjUMTg9xvPujp/text</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>

			<dependencyManagement>
				<dependencies>
					<!-- Only include Google Analytics on production releases to not pollute with dev data -->
					<dependency>
						<groupId>com.semanticcms</groupId><artifactId>semanticcms-google-analytics</artifactId><version>1.0.3-SNAPSHOT</version>
					</dependency>
				</dependencies>
			</dependencyManagement>

			<dependencies>
				<!-- Only include Google Analytics on production releases to not pollute with dev data -->
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-google-analytics</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

