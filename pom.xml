					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
						<configuration>
							<charset>UTF-8</charset>
							<server>tomcat7-maven-plugin-aorepo.org</server>
							<!-- Parallel deployment -->
							<!-- Unreliable with current hack:
							<path>/ROOT##${maven.build.timestamp}-${project.version}</path>
							-->
							<path>/</path>
							<update>true</update>
							<url>${tomcat7-maven-plugin-aorepo.org}</url>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>publish</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>publish</id><phase>deploy</phase><goals><goal>deploy-only</goal></goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

